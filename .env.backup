# Production конфигурация для youinvest.duckdns.org

# Основные настройки
ENVIRONMENT=production
DEBUG=false
APP_NAME=YouInvest

# CORS для production
CORS_ORIGINS=https://www.youinvest.duckdns.org,https://youinvest.duckdns.org,http://localhost:3000
TRUSTED_HOSTS=youinvest.duckdns.org,www.youinvest.duckdns.org,youinvest-api.duckdns.org,localhost

# Безопасность (случайные ключи для production)
SECRET_KEY=$(openssl rand -base64 32 2>/dev/null || echo "super-secret-key-$(date +%s)")
JWT_SECRET_KEY=$(openssl rand -base64 32 2>/dev/null || echo "jwt-secret-key-$(date +%s)")
ENCRYPTION_KEY=$(openssl rand -base64 32 2>/dev/null || echo "encryption-key-$(date +%s)")

# База данных
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=youinvest_prod
DATABASE_USER=youinvest_user
DATABASE_PASSWORD=youinvest_password_123

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=youinvest-admin
MINIO_SECRET_KEY=youinvest-secret-123
MINIO_BUCKET_NAME=youinvest-files

# Логирование  
LOG_LEVEL=INFO

# Rate limiting
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_HOUR=2000
RATE_LIMIT_PER_DAY=20000
DATABASE_URL=postgresql+asyncpg://youinvest_user:youinvest_password_123@localhost:5432/youinvest_prod
